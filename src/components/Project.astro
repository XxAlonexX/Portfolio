---
const { title, desc, tech, link } = Astro.props;
---

<div class="single-item">
  <h3 class="project-title">
    {title}
    {link && (
      <a href={link} target="_blank" rel="noopener noreferrer" class="project-link" aria-label="View project">
        <img src="/assets/link.svg" alt="Link" width="24" height="24" />
      </a>
    )}
  </h3>
  <div class="project-desc project-desc-list w-richtext">
    <ul role="list">
      {desc.map(item => <li>{item}</li>)}
    </ul>
  </div>
  <div class="mini-label-white">Technologies &amp; tools</div>
  <div class="chips-container">
    {tech.map(techItem => <div class="single-chip">{techItem}</div>)}
  </div>
</div>

<style>
  .project-title {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    transition: opacity 0.3s ease;
    margin-left: 8px;
  }

  .project-link:hover {
    opacity: 0.7;
  }

  .project-link img {
    width: 24px;
    height: 24px;
    filter: brightness(0) invert(1);
  }
</style>
